    script.
        // 展开收起效果
        $('.retract').on('click', function(){
            if($('.retract img').hasClass('active')){
                $(this).find('img').removeClass('active');
                $(this).closest('li').find('.invi-con ul').removeClass('active');
            }else{
                $(this).find('img').addClass('active');
                $(this).closest('li').find('.invi-con ul').addClass('active');
            }
        });

        $('.ty').on('click', function () {
            zeroModal.show({
                title: '暂停合作提示',
                width: '410px',
                height: '247px',
                content: "<p class=\'zt-title\'>同意该合作参数修改申请？</p><div class=\'zt-con\'><span class=\'zt-c-f\'>确定</span><span class=\'zt-c-s\'>取消</span></div>"
            })
        })
        $('.bty').on('click', function () {
            zeroModal.show({
                title: '恢复合作提示',
                width: '410px',
                height: '247px',
                content: "<p class=\'zt-title\'>不同意该合作参数修改申请？</p><div class=\'zt-con\'><span class=\'zt-c-f\'>确定</span><span class=\'zt-c-s\'>取消</span></div>"
